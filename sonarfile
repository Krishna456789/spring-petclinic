pipeline{
    agent {label 'sonarqube'}
    stages {
        stage ('vcs'){
            steps{
                git url: 'https://github.com/Krishna456789/spring-petclinic.git',
                branch: 'main'

            }
        }
        stage('sonar analysis') {
            steps {
                // performing sonarqube analysis with "withSonarQubeENV(<Name of Server configured in Jenkins>)"
                withSonarQubeEnv('sonarqube') {
                    sh './mvnw clean package sonar:sonar -Dsonar.organization=krishna456789 -Dsonar.projectkey=cb4e55eba23a15c65a31e02f313e0e42e8e18778'
                }
            }
        }
    }
}